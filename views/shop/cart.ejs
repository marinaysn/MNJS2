<%- include('../includes/head.ejs') %>
  </head>
  <body>
    <%- include('../includes/navigation.ejs') %>
    
   <main>
    
      
      <h1>My Cart</h1>
      

      <% if (prods.length > 0) { %>
      <ul>
        <% prods.forEach( p => { %>
          <li>
            <p><%= p.title %> (<%= p.quantity %>)</p>
            <form action="/cartDeleteItem" method="POST">
              <input type="hidden" name="productId" value="<%= p._id %>">
              <input type="hidden" name="productQty" value="<%= p.quantity %>">

              <button class="btn editBtn" type="submit">Delete</button>
            </form>
             </li>
         
          <% }) %>

      </ul>

      <hr />
      <form action="/checkout" method="POST" class="rightAl">
     
        <button class="btn editBtn" type="submit">Checkout</button>
      </form>

     <% } else { %>
        <h1 >No Products in the Cart</h1>
      <% } %>
    </main>
    
    <%- include('../includes/end.ejs') %>