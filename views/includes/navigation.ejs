      </li>

      <li class="main-header-li <%= path === '/productList' ? 'active' : '' %>">
        <a href="/productList">Products</a>
      </li>


      <!-- admin related -->
      <% if (isLoggedIn) { %>    
      <li
        class="main-header-li <%= path === '/admin/editProduct' ? 'active' : '' %>"
