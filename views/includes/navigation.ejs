        <a href="/admin/editProduct">Add Product</a>
      </li>
      <li
        class="main-header-li <%= path === '/admin/listOfProducts' ? 'active' : '' %>"
      >
        <a href="/admin/listOfProducts">Admin Product</a>
      </li>

      <!-- user related -->
      <li class="main-header-li <%= path === '/cart' ? 'active' : '' %>">
        <a href="/cart">My Cart</a>
      </li>

      <li class="main-header-li <%= path === '/orders' ? 'active' : '' %>">
        <a href="/orders">My Orders</a>
      </li>

      <% } %>
      <!-- end admin related -->
      <!-- end user related -->


