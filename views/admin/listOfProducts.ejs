<!-- admin/products -->

<%- include('../includes/head.ejs') %>

    <link rel="stylesheet" href="/css/product.css">
  </head>
  <body>
    <%- include('../includes/navigation.ejs') %>

    <main>
      <h1>My Products</h1>
      <p>List of All Products</p>

      <% if (prods.length > 0) { %>
      <div class="grid">
        <% for (let p of prods) { %>
        <article class="card product-item">
          <header class="card__header">
            <h1 class="product__title title__decoration"><%= p.title %></h1>
          </header>
          <div class="card__image">
            <img
              src="\<%= p.imageUrl %>"
              alt="<%= p.title %>"
            />
          </div>
          <div class="card__content">
            <h2 class="product__price">$<%= p.price %></h2>
            <p class="product__description">
                <%= p.description %>
            </p>
          </div>
          <div class="card__actions">
            <!-- <a href="/admin/editProduct/<%= p.id %>?edit=true" class="btn editBtn">Edit</a> -->
            
           <!-- <%- include('../includes/edit.ejs', {prod: p}) %> -->
          <a href="/admin/editProduct/<%= p._id %>?edit=true" class="btn editBtn">Edit</a>
           <form action="/admin/deleteProduct" method="POST">  
            
            <input type="hidden" name="productId" value="<%= p._id %>">
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <button class="btn">Delete</button>
           
        </form>

           
          </div>
        </article>
        <% } %>
      </div>
      <% } else { %>
      <p>Your cart is empty</p>
      <% } %>
      </main>
    <%- include('../includes/end.ejs') %>
